<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head') -%>
    <style>
      .starter-template {
        padding: 3rem 1.5rem;
        text-align: center;
      }
      .footer {
        background-color: #f5f5f5;
      }
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
  </head>
  <body class="bg-light">
    <%- include('./partials/navbar', { dashboard: true, shortens: false, about: false, community: false, contributors: false }) -%>
    <main role="main" class="container">
      <%- include('./partials/brand') -%>
      <div class="row">
        <div class="col mt-2 order-md-2 mb-2 justify-content-center align-items-center">
          <div class="card p-4">
            <div class="lead d-flex justify-content-center">Paste the URL to be shortened</div>
            <div class="input-group p-2">
              <input type="text" class="form-control" id="url" placeholder="Paste the url" />
            </div>
            <div class="input-group mt-2 mb-2 p-2">
              <div class="input-group-prepend">
                <div class="input-group-text">
                  <input type="checkbox" />
                </div>
              </div>
              <input type="text" class="form-control" id="custom_key" placeholder="Check to customize your link" disabled="disabled" />
            </div>
            <div class="button p-2">
              <button type="submit" class="btn btn-primary" id="shorten">Go Short!</button>
            </div>
          </div>
          <%- include('./partials/error') -%> <%- include('./partials/result') -%>
        </div>
      </div>

      <%- include('./partials/recent_shortens') -%>
    </main>
    <%- include('./partials/script') -%>
  </body>
</html>
